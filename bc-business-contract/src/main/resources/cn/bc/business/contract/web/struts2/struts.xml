<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="contract" extends="bc-default" namespace="/bc-business">
		<action name="contract/create" class="contractAction" method="create">
			<result name="showdialog" >/bc-business/contract/select.jsp</result>
		</action>
		<action name="contract/renew" class="contractAction" method="renew"/>
	</package>
	
	<!-- 劳动合同 -->
	<package name="contract4Labour" extends="bc-default" namespace="/bc-business/contract4Labour">
		<action name="create" class="contract4LabourAction" method="create">
			<result name="form">/bc-business/contract4Labour/form.jsp</result>
		</action>		
		<action name="open" class="contract4LabourAction" method="open">
			<result name="formr">/bc-business/contract4Labour/form.jsp</result>
		</action>
		<action name="edit" class="contract4LabourAction" method="edit">
			<result name="form">/bc-business/contract4Labour/form.jsp</result>
		</action>
		<action name="save" class="contract4LabourAction" method="save"/>
		<action name="delete" class="contract4LabourAction" method="delete" />
		<action name="certInfo" class="contract4LabourAction" method="certInfo">
		</action>
		<action name="carManInfo" class="contract4LabourAction" method="carManInfo">
		</action>
		<action name="isExistContract" class="contract4LabourAction" method="isExistContract">
		</action>
	</package>
	
	<!-- 劳动合同的版本管理 -->
	<package name="contract4LabourOperate" extends="bc-default" namespace="/bc-business/contract4LabourOperate">
		<!-- 续签 -->
		<action name="doRenew" class="contract4LabourOperateAction" method="doRenew"/>
		<!-- 转车 -->
		<action name="doChangeCar" class="contract4LabourOperateAction" method="doChangeCar"/>
		<!-- 离职 -->
		<action name="doResign" class="contract4LabourOperateAction" method="doResign"/>
	</package>
	
	<!-- 经济合同 -->
	<package name="contract4Charger" extends="bc-default" namespace="/bc-business">
		<action name="contract4Charger/create" class="contract4ChargerAction" method="create">
			<result name="form">/bc-business/contract4Charger/form.jsp</result>
		</action>
		<action name="contract4Charger/edit" class="contract4ChargerAction" method="edit">
			<result name="form">/bc-business/contractCharger/form.jsp</result>
		</action>
		<action name="contract4Charger/delete" class="contract4ChargerAction" method="delete" />
	</package>
</struts>