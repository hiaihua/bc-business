<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="contract" extends="bc-default" namespace="/bc-business">
		<action name="contract/create" class="contractAction" method="create">
			<result name="showdialog" >/bc-business/contract/select.jsp</result>
		</action>
	</package>
	
	<!-- 劳动合同 -->
	<package name="contract4Labour" extends="bc-default" namespace="/bc-business/contract4Labour">
		<action name="create" class="contract4LabourAction" method="create">
			<result name="form">/bc-business/contract4Labour/form.jsp</result>
		</action>		
		<action name="open" class="contract4LabourAction" method="open">
			<result name="formr">/bc-business/contract4Labour/form.jsp</result>
		</action>
		<action name="edit" class="contract4LabourAction" method="edit">
			<result name="form">/bc-business/contract4Labour/form.jsp</result>
		</action>
		<action name="save" class="contract4LabourAction" method="save"/>
		<action name="delete" class="contract4LabourAction" method="delete" />
		<action name="certInfo" class="contract4LabourAction" method="certInfo">
		</action>
		<action name="carManInfo" class="contract4LabourAction" method="carManInfo">
		</action>
		<action name="isExistContract" class="contract4LabourAction" method="isExistContract">
		</action>
		<action name="checkInsurCodeIsExist" class="contract4LabourAction" method="checkInsurCodeIsExist" />
	</package>
	
	<!-- 劳动合同的版本管理 -->
	<package name="contract4LabourOperate" extends="bc-default" namespace="/bc-business/contract4LabourOperate">
		<!-- 续签 -->
		<action name="doRenew" class="contract4LabourOperateAction" method="doRenew"/>
		<!-- 转车 -->
		<action name="doChangeCar" class="contract4LabourOperateAction" method="doChangeCar"/>
		<!-- 离职 -->
		<action name="doResign" class="contract4LabourOperateAction" method="doResign"/>
	</package>
	
	<!-- 经济合同 -->
	<package name="contract4Charger" extends="bc-default" namespace="/bc-business/contract4Charger">
		<action name="create" class="contract4ChargerAction" method="create">
			<result name="form">/bc-business/contract4Charger/form.jsp</result>
		</action>
		<action name="open" class="contract4ChargerAction" method="open">
			<result name="formr">/bc-business/contract4Charger/form.jsp</result>
		</action>
		<action name="edit" class="contract4ChargerAction" method="edit">
			<result name="form">/bc-business/contract4Charger/form.jsp</result>
		</action>
		<action name="delete" class="contract4ChargerAction" method="delete" />
		<action name="save" class="contract4ChargerAction" method="save"/>
		<action name="isExistContract" class="contract4ChargerAction" method="isExistContract" />
		<action name="checkCodeIsExist" class="contract4ChargerAction" method="checkCodeIsExist" />
	</package>
	
	<!-- 经济合同的版本管理 -->
	<package name="contract4ChargerOperate" extends="bc-default" namespace="/bc-business/contract4ChargerOperate">
		<!-- 续约 -->
		<action name="doRenew" class="contract4ChargerOperateAction" method="doRenew"/>
		<!-- 过户-->
		<action name="doChangeCharger" class="contract4ChargerOperateAction" method="doChangeCharger"/>
		<!-- 重发包-->
		<action name="doChangeCharger2" class="contract4ChargerOperateAction" method="doChangeCharger2"/>
		<!-- 注销 -->
		<action name="doLogout" class="contract4ChargerOperateAction" method="doLogout"/>
	</package>
	
	<!-- 经济合同 选择 -->
	<package name="selectDateAndCharger" extends="bc-default" namespace="/bc-business/selectDateAndCharger">
		<!-- 过户选择 -->
		<action name="select" class="selectDateAndChargerAction" >
			<result name="success">/bc-business/contract4Charger/selectDateAndCharger.jsp</result>
		</action>
		<!-- 续约选择 -->
		<action name="select2" class="selectDateRangeAndCodeAction" >
			<result name="success">/bc-business/contract4Charger/selectDateRange.jsp</result>
		</action>
	</package>
	
	<!-- 劳动合同 选择 -->
	<package name="selectTwoDate" extends="bc-default" namespace="/bc-business/selectTwoDate">
		<!-- 离职选择 -->
		<action name="select" class="selectTwoDateAction" >
			<result name="success">/bc-business/contract4Labour/selectTwoDate.jsp</result>
		</action>
	</package>
</struts>