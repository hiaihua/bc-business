			<param name="customType">0</param>
			<param name="customRole">BS_COMPANYFILE_MANAGE</param>
		</action>
		<!-- 导出 视图数据-->
		<action name="export" class="infosAction" method="export">
			<param name="viewType">0</param>
			<param name="customName">companyFile</param>
			<param name="customType">0</param>
			<param name="customRole">BS_COMPANYFILE_MANAGE</param>
		</action>
